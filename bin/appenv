#!/bin/bash

if [ $1 = "dev1" ]; then
	echo "SETTING UP DEV1"
	export APP_IMAGE_NAME=idev1
	export APP_CONTAINER_NAME=dev1
	export APP_IP=172.17.0.6
	export APP_HOST_PORT=8087
elif [ $1 = "dev2" ]; then
	echo "SETTING UP DEV2"
	export APP_IMAGE_NAME=idev2
	export APP_CONTAINER_NAME=dev2
	export APP_IP=172.17.0.7
	export APP_HOST_PORT=8088
elif [ $1 = "tst1" ]; then
	echo "SETTING UP TST1"
	export APP_IMAGE_NAME=itst1
	export APP_CONTAINER_NAME=tst1
	export APP_IP=172.17.0.8
	export APP_HOST_PORT=8089
elif [ $1 = "tst2" ]; then
	echo "SETTING UP TST2"
	export APP_IMAGE_NAME=itst2
	export APP_CONTAINER_NAME=tst2
	export APP_IP=172.17.0.9
	export APP_HOST_PORT=8090
else
    echo "USAGE ./bin/dbenv [dev1|dev2|tst1|tst2] [C]"
fi

export APP_CONTAINER_PORT=8080
export APP_GIT_REPO=https://github.com/RuWel/AngularSpringbootPostgres.git

eval $(./bin/.appenv)

if [ $2 = "C" ]; then
	echo "CREATE CONTAINER $APP_CONTAINER_NAME"
    ./bin/appinstall
fi
