#!/bin/bash

if docker network inspect ${NETWORK_NAME} > /dev/null 2>&1
then
    echo "Network '${NETWORK_NAME}' already exists; remove it"
    docker network rm ${NETWORK_NAME}
    docker network create --subnet=$NETWORK_SUBNET $NETWORK_NAME  > /dev/null
else
    echo "Network '${NETWORK_NAME}' doesn't exist; creating it"
    docker network create --subnet=$NETWORK_SUBNET $NETWORK_NAME  > /dev/null
fi


