#!/bin/bash

DB_BASEIMAGE=postgres
DB_BASEIMAGE_TAG=13.1-alpine
DB_CONTAINER_NAME=dbacc
DB_NAME=appdb
DB_IP=172.16.1.2
DB_HOST_PORT=8083
DB_DRIVER=postgresql
DB_CONTAINER_PORT=5432
DB_SPRING_DATASOURCE_URL=jdbc:$DB_DRIVER://$DB_CONTAINER_NAME:$DB_CONTAINER_PORT/$DB_NAME
DB_SPRING_DATASOURCE_USERNAME=postgres
DB_SPRING_DATASOURCE_PASSWORD=123

echo "export DB_IMAGE=$DB_BASEIMAGE:$DB_BASEIMAGE_TAG"
echo "export DB_NAME=$DB_NAME"
echo "export DB_CONTAINERNAME=$DB_CONTAINER_NAME"
echo "export DB_IPADDRESS=$DB_IP"
echo "export DB_PASSWORD=$DB_SPRING_DATASOURCE_PASSWORD"
echo "export DB_HOSTPORT=$DB_HOST_PORT"
echo "export DB_CONTAINERPORT=$DB_CONTAINER_PORT"
echo "export SPRING_DATASOURCE_URL=$DB_SPRING_DATASOURCE_URL"
echo "export SPRING_DATASOURCE_USERNAME=$DB_SPRING_DATASOURCE_USERNAME"
echo "export SPRING_DATASOURCE_PASSWORD=$DB_SPRING_DATASOURCE_PASSWORD"

echo '# Run this command to configure your shell: '
echo '# eval $(./dbenv)'
